{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/cv",
        "destination": "/cv/dan_mcardle_cv_html.html"
      },
      {
        "source": "/dmcardle-cv.pdf",
        "destination": "/cv/dan_mcardle_cv_pdf.pdf"
      },
      {
        "source": "/resume",
        "destination": "/cv/dan_mcardle_resume_html.html"
      }
    ],
    "headers": [ {
      "source": "/cv/**",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=123"
      } ]
    } ]
  },
  "emulators": {
    "hosting": {
      "port": 9000,
      "host": "0.0.0.0"
    }
  }
}
